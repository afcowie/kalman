tested-with:         GHC == 7.10

build-type:          Simple

library
  default-language:  Haskell2010

  build-depends:     base,
                     text

  hs-source-dirs:    lib

  exposed-modules:   Text.Render

  ghc-options:       -O2
                     -Wall
                     -Wwarn
                     -fwarn-tabs

  ghc-prof-options:  -fprof-auto-top


executable           experiment
  default-language:  Haskell2010

  build-depends:     base,
                     matrix,
                     text,
                     criterion,
                     kalman

  ghc-options:       -threaded
                     -Wall
                     -Wwarn
                     -fwarn-tabs

  hs-source-dirs:    tests
  main-is:           Experiment.hs


benchmark            bench
  default-language:  Haskell2010
  type:              exitcode-stdio-1.0

  build-depends:     base,
                     bytestring,
                     transformers,
                     mtl,
                     criterion,
                     matrix,
                     hmatrix

  ghc-options:       -threaded
                     -Wall
                     -Wwarn
                     -fwarn-tabs

  hs-source-dirs:    tests
  main-is:           ComparisonBenchmark.hs
  other-modules:     PureMatrixCalculation
                     WrappedBlasLapackCalculation
                     SampleMatrixData
                      
                      
